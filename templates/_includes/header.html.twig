<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('home') }}">SymfoFilm</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('movies') }}">Films</a>
            </li>
            <li class="nav-item dropdown">
                <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button">
                    Catégories
                </a>
                <div aria-labelledby="navbarDropdown" class="dropdown-menu">
                    {% for category in categories %}
                        <a class="dropdown-item" href="{{ path('category', { 'slug' : category.slug}) }}">{{ category.title }}</a>
                    {% endfor %}
                </div>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('register') }}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('my_account') }}"><img src="{{ user.picture }}" alt="{{ user.username }}" height="32" style="display: inline" class="mr-2 rounded-circle">{{ user.username }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i>Déconnexion</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

{% for label, messages in app.flashes %}
    <div class="container mt-5">
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                <p>{{ message|raw }}</p>
            </div>
        {% endfor %}
    </div>
{% endfor %}