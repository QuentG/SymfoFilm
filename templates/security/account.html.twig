{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-3 text-center">
                    <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.fullName }}">
                    <br>
                    <span class="badge badge-primary">YES</span>
                </div>
                <div class="col-9">
                    <h1>{{ user.fullName }}</h1>
                    {# is same as = comparer 2 objets #}
                    {% if user is same as(app.user) %}
                        <div class="mt-3">
                            <a href="{{ path('profil') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                            <a href="{{ path('change-password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                        </div>
                    {% endif %}
                </div>
            </div>
            <hr>
    </div>
    </div>
{% endblock %}
